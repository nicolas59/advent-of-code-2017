{
    "compileOnSave": true,    
    "compilerOptions": {
        "module": "none",
        "lib": [  
            "es6",
            "es5",
            "es2015"
       ],
        "allowJs": true,        
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "alwaysStrict":false,
        "sourceMap": true,
        "outDir":"dist/"
        
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}